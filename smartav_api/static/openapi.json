      "/face-recognition": {
        "post": {
          "tags": [
            "Face Recognition"
          ],
          "description": "Recognize the faces in the image.<br><br> \"min_distance\" is an optional field. The value of this field is related with the feature extraction model. <br> For example, it will be in [0, 1]. <br> Since we are using \"facenet\" model as default, the ideal threshold is 0.35.",
          "operationId": "faceRecognition",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "image"
                  ],
                  "type": "object",
                  "properties": {
                    "image": {
                      "type": "string",
                      "example": "data:image/jpeg;base64,/9j/4AAQSkZJRgABAQEAYABgAAD...."
                    },
                    "min_distance": {
                      "type": "number",
                      "format": "float",
                      "example": 0.35
                    }
                  }
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Returns the candidates most similar to the face in the input image from samples in the database.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "person1"
                      },
                      "name": {
                        "type": "string",
                        "example": "person1"
                      },
                      "metadata": {
                        "type": "string",
                        "example": "embedlink"
                      },
                      "bbox": {
                        "type": "string",
                        "example": "x1, y1, w, h"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Invalid request"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Feature extraction node is not running."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
