      "/instance-segmentation/detect-objects": {
        "post": {
          "tags": [
            "Instance Segmentation"
          ],
          "description": "Detects the objects from the input image.<br><br> \"score_threshold\" should be a value between 0 and 1.",
          "operationId": "detectObjects",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "image"
                  ],
                  "type": "object",
                  "properties": {
                    "image": {
                      "type": "string",
                      "example": "data:image/jpeg;base64,/9j/4AAQSkZJRgABAQEAYABgAAD...."
                    },
                    "top_k": {
                      "type": "integer",
                      "example": 5
                    },
                    "score_threshold": {
                      "type": "number",
                      "format": "float",
                      "example": 0.5
                    }
                  }
                }
              }
            },
            "required": true
          },
          "responses": {
            "200": {
              "description": "Successfully detected the objects from the input image and return the classes for each object",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "mjpg": {
                        "type": "string",
                        "example": "string of encoded image"
                      },
                      "detected_objects": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "Class": {
                              "type": "string",
                              "example": "classification of the detected object"
                            },
                            "Score": {
                              "type": "number",
                              "format": "float",
                              "example": 0.92
                            },
                            "Rect": {
                              "type": "object",
                              "properties": {
                                "x": {
                                  "type": "number",
                                  "format": "float",
                                  "example": 100.5
                                },
                                "y": {
                                  "type": "number",
                                  "format": "float",
                                  "example": 50.5
                                },
                                "w": {
                                  "type": "number",
                                  "format": "float",
                                  "example": 100
                                },
                                "h": {
                                  "type": "number",
                                  "format": "float",
                                  "example": 100
                                }
                              }
